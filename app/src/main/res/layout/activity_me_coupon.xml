<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/activity_second_titlebar" />

    <com.third.listviewshangxia.XListView
        android:id="@+id/lv_me_coupon"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0dp"
        android:layout_weight="1"
        android:layout_margin="@dimen/dimen_12dp"
        android:divider="#00000000"
        android:dividerHeight="10dp"
        android:listSelector="@color/transparent"
        android:scrollbars="none"/>

    <Button
        android:id="@+id/bt_go_gain_coupon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_12dp"
        android:background="@drawable/me_coupon_selector"
        android:padding="@dimen/dimen_16dp"
        android:text="更多好劵，去领劵中心看看"
        android:textColor="@color/green"
        android:textSize="@dimen/dimen_20dp" />
</LinearLayout>