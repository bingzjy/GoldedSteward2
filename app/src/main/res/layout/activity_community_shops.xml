<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/activity_browser_titlebar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/community_shop_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/dimen_2dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/red"
            android:textSize="@dimen/font_size_12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/community_shop_name_lv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="3"

            android:scrollbars="none">

        </ListView>
        <!--android:listSelector="@drawable/community_shop_type"-->
        <GridView
            android:id="@+id/community_shop_details_gv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_2dp"
            android:layout_marginRight="@dimen/dimen_2dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:fadeScrollbars="true"
            android:horizontalSpacing="@dimen/dimen_6dp"
            android:numColumns="3"
            android:scrollbars="none"
            android:verticalSpacing="@dimen/dimen_12dp">

        </GridView>
    </LinearLayout>
</LinearLayout>