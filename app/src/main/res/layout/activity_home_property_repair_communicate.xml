<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ll_property_repair_communicate"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <include layout="@layout/activity_second_titlebar_textbutton"/>

    <ScrollView
        android:id="@+id/sv_repair_communicate"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:id="@+id/ll_repair_communicate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_repair_communicate_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_48dp"
        android:background="@drawable/border_top"
        android:focusableInTouchMode="true"
        android:padding="@dimen/dimen_4dp">
        <EditText
            android:id="@+id/et_repair_send_content"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:imeOptions="actionSend"
            android:singleLine="true"/>
        <ImageButton
            android:id="@+id/ibtn_repair_send_picture"
            android:layout_width="@dimen/dimen_48dp"
            android:layout_height="36dp"
            android:background="@null"
            android:padding="@dimen/dimen_2dp"
            android:scaleType="fitCenter"
            android:src="@drawable/picture_send"/>

    </LinearLayout>
</LinearLayout>