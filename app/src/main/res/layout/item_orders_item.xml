<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:padding="@dimen/dimen_8dp">
        <ImageView
            android:id="@+id/iv_goods_image"
            android:layout_width="@dimen/dimen_78dp"
            android:layout_height="@dimen/dimen_78dp"
            android:layout_marginRight="@dimen/dimen_8dp"
            android:contentDescription="@null"
            android:src="@mipmap/default_goods"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_goods_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="2"
                android:text="This is information&apos;s title"
                android:textColor="@color/gray_deep"
                android:textSize="@dimen/font_size_14sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_4dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:text="规格："
                    android:textColor="@color/gray"
                    android:textSize="@dimen/font_size_14sp"/>
                <TextView
                    android:id="@+id/tv_goods_stock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:text="300g"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/font_size_14sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_16dp"
                    android:lines="1"
                    android:text="价格："
                    android:textColor="@color/gray"
                    android:textSize="@dimen/font_size_14sp"/>
                <TextView
                    android:id="@+id/tv_goods_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:text="￥20.00"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/font_size_14sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_4dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:text="数量："
                    android:textColor="@color/gray"
                    android:textSize="@dimen/font_size_14sp"/>
                <TextView
                    android:id="@+id/tv_goods_numbers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:text="2"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/font_size_14sp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/dimen_8dp"
        android:layout_marginRight="@dimen/dimen_8dp"
        android:background="@color/gray_light_3"
        android:contentDescription="@null"/>
</LinearLayout>