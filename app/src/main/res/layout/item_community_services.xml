<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_bottom"
    android:orientation="horizontal"
    android:descendantFocusability="blocksDescendants"
    android:padding="@dimen/dimen_8dp">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_8dp"
        android:layout_marginTop="@dimen/dimen_4dp"
        android:layout_weight="4"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_training_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="THIS IS INFOMATION TITLE"
            android:textColor="@color/gray_deep"
            android:lines="1"
            android:textSize="@dimen/font_size_16sp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dimen_5dp">
            <ImageView
                    android:layout_width="10dp"
                    android:layout_height="14dp"
                    android:layout_marginTop="3dp"
                    android:src="@mipmap/locate_icon"/>
            <TextView
                android:id="@+id/tv_training_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_4dp"
                android:textColor="@color/gray_light_4"
                android:text="THIS IS ADDRESS"
                android:textSize="@dimen/font_size_14sp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="70dp">
        <ImageButton
                android:id="@+id/tel_training"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/back_imagebutton_telephone"/>
    </LinearLayout>
</LinearLayout>