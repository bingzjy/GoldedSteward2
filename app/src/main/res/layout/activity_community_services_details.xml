<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/activity_second_titlebar" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="none"
            android:layout_marginTop="@dimen/dimen_0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.ldnet.view.ImageCycleView
                        android:id="@+id/img_housekeeping"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_144dp"/>

                <TextView
                    android:id="@+id/tv_housekeeping_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_12dp"
                    android:background="@drawable/border_top_bottom"
                    android:padding="@dimen/dimen_12dp"
                    android:text="title"
                    android:textSize="@dimen/font_size_20sp" />

                <TextView
                    android:id="@+id/tv_housekeeping_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_12dp"
                    android:background="@drawable/border_top_bottom"
                    android:padding="@dimen/dimen_12dp"
                    android:text="address"
                    android:textColor="@color/gray_light_4"
                    android:textSize="@dimen/font_size_16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_12dp"
                    android:background="@drawable/border_top_bottom"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dimen_12dp"
                        android:text="详细信息"
                        android:textSize="@dimen/font_size_16sp" />

                    <TextView
                        android:id="@+id/tv_housekeeping_memo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/dimen_12dp"
                        android:text="memo"
                        android:textColor="@color/gray_light_4"
                        android:textSize="@dimen/font_size_16sp"
                        android:paddingBottom ="@dimen/dimen_12dp"/>
                </LinearLayout>

                <ListView
                    android:id="@+id/lv_housekeeping"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </ScrollView>

        <!--<LinearLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="@dimen/dimen_48dp"-->
        <!--android:layout_alignParentBottom="true"-->
        <!-- -->
        <!--android:background="@null"-->
        <!--android:orientation="horizontal"-->
        <!-->-->

        <Button
            android:id="@+id/btn_phone_housekeeping"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_48dp"
            android:background="@drawable/border_bottom_green"
            android:text="拨打电话"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_20sp"

           />
        <!--</LinearLayout>-->



</LinearLayout>