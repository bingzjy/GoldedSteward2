<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingBottom="@dimen/dimen_16dp">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_top_bottom"
            android:orientation="vertical">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:padding="@dimen/dimen_8dp">
            <TextView
                    android:id="@+id/tv_goods_business"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:lines="1"
                    android:text="Business Name"
                    android:textColor="@color/gray_deep"
                    android:textSize="@dimen/font_size_14sp"/>

            <CheckBox
                    android:id="@+id/chk_goods_checked"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/dimen_8dp"
                    android:background="@drawable/chk_custom"
                    android:button="@null"/>
        </LinearLayout>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/dimen_8dp"
                android:layout_marginRight="@dimen/dimen_8dp"
                android:background="@color/gray_light_3"
                android:contentDescription="@null"/>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content">
            <com.ldnet.utility.MyListView
                    android:id="@+id/lv_orders_goods"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:divider="@null"
                    android:scrollbars="none">
            </com.ldnet.utility.MyListView>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="horizontal"
                android:padding="@dimen/dimen_8dp">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:text="小计："
                    android:textColor="@color/red"
                    android:textSize="@dimen/font_size_14sp"/>
            <TextView
                    android:id="@+id/tv_items_prices"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:lines="1"
                    android:text="￥19"
                    android:textColor="@color/red"
                    android:textSize="@dimen/font_size_14sp"/>
            <Button
                    android:id="@+id/btn_orders_complain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:text="投诉"
                    android:textColor="@color/red"
                    android:textSize="@dimen/font_size_14sp"/>
            <Button
                    android:id="@+id/btn_orders_delete_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_8dp"
                    android:background="@null"
                    android:text="取消订单"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/font_size_14sp"/>
            <Button
                    android:id="@+id/btn_orders_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_8dp"
                    android:background="@null"
                    android:text="订单详情"
                    android:textColor="@color/green"
                    android:textSize="@dimen/font_size_14sp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>