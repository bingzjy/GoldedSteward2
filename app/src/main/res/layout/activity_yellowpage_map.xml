<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <include layout="@layout/activity_second_titlebar"/>
    <com.amap.api.maps.MapView
        android:id="@+id/mv_yellowpages_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
    </com.amap.api.maps.MapView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@drawable/border_top"
        android:padding="@dimen/dimen_4dp">
        <TextView
            android:id="@+id/tv_yellowpages_maps_type"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_8dp"
            android:gravity="center"
            android:text="出行方式："
            android:textColor="@color/gray_deep"
            android:textSize="@dimen/font_size_16sp"/>
        <RadioGroup
            android:id="@+id/rdg_is_drive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_yellowpages_maps_type"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/rbtn_type_drive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rdb_custom_rounded"
                android:button="@null"
                android:checked="true"
                android:padding="@dimen/dimen_12dp"
                android:text="驾车"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_14sp"/>
            <RadioButton
                android:id="@+id/rbtn_type_step"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_8dp"
                android:background="@drawable/rdb_custom_rounded"
                android:button="@null"
                android:padding="@dimen/dimen_12dp"
                android:text="步行"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_14sp"/>
        </RadioGroup>
        <Button
            android:id="@+id/btn_start_navigate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_8dp"
            android:background="@drawable/back_button_orange"
            android:padding="@dimen/dimen_12dp"
            android:text="开始导航"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_14sp"/>
    </RelativeLayout>
</LinearLayout>
