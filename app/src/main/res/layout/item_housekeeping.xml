    <TextView
        android:id="@+id/tv_item_housekeeping_cost"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:lines="1"
        android:padding="@dimen/dimen_12dp"
        android:textColor="@color/green"
        android:text="aaqq" />

</LinearLayout>