<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@null"
              android:orientation="vertical"
              android:paddingBottom="@dimen/dimen_8dp"
              android:paddingLeft="@dimen/dimen_8dp"
              android:paddingRight="@dimen/dimen_4dp"
              android:paddingTop="@dimen/dimen_8dp">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:paddingBottom="@dimen/dimen_4dp">

        <TextView
                android:id="@+id/tv_repair_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:paddingBottom="@dimen/dimen_4dp"
                android:paddingRight="@dimen/dimen_4dp"
                android:paddingTop="@dimen/dimen_4dp"
                android:text="PERSONAL"
                android:textColor="@color/gray"
                android:textSize="@dimen/font_size_14sp"/>
        <TextView
                android:id="@+id/tv_repair_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:lines="1"
                android:text="This is repair&apos;s title"
                android:textColor="@color/gray_deep_1"
                android:textSize="@dimen/font_size_16sp"/>
        <ImageView
                android:visibility="gone"
                android:id="@+id/tv_repair_notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/red"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dimen_8dp"
        />
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:paddingBottom="@dimen/dimen_8dp">
        <TextView
                android:id="@+id/tv_repair_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:lines="1"
                android:paddingBottom="@dimen/dimen_4dp"
                android:paddingLeft="@dimen/dimen_4dp"
                android:paddingRight="@dimen/dimen_4dp"
                android:paddingTop="@dimen/dimen_4dp"
                android:text="2015-09-08 12:32:54"
                android:textColor="@color/gray"
                android:textSize="@dimen/font_size_14sp"/>
        <TextView
                android:id="@+id/tv_repair_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:padding="5dp"
                android:text="SUBMIT"
                android:textColor="@color/orange"
                android:textSize="@dimen/font_size_14sp"/>
    </LinearLayout>
</LinearLayout>