<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include layout="@layout/activity_second_titlebar"/>
    <LinearLayout
            android:padding="@dimen/dimen_8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_4dp"
                android:text="@string/repair_house_info"
                android:textColor="@color/gray_deep"
                android:textSize="@dimen/font_size_16sp"/>
        <TextView
                android:id="@+id/tv_fee_houseinfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/dimen_4dp"
                android:text="THIS CONTENT"
                android:textColor="@color/gray_deep"
                android:textSize="@dimen/font_size_16sp"/>
    </LinearLayout>
    <View android:layout_width="match_parent" android:layout_height="1dp"
          android:background="@color/gray_light_2"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/tv_fee_year_month"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/dimen_10dp"
                android:text="THIS CONTENT"
                android:textColor="@color/gray_deep"
                android:textSize="@dimen/font_size_16sp"/>
        <TextView
                android:id="@+id/tv_fee_sum"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/dimen_10dp"
                android:text="THIS CONTENT"
                android:gravity="right"
                android:textColor="@color/gray_deep"
                android:textSize="@dimen/font_size_16sp"/>
    </LinearLayout>
    <ListView
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:padding="@dimen/dimen_10dp"
            android:id="@+id/fee_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@null"
            >
    </ListView>
    <TextView
            android:id="@+id/tv_fee_submit"
            android:background="@drawable/sharp_rect"
            android:text="@string/button_go_paid"
            android:textSize="@dimen/font_size_16sp"
            android:layout_margin="@dimen/dimen_10dp"
            android:textColor="@color/white"
            android:padding="@dimen/dimen_10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
</LinearLayout>