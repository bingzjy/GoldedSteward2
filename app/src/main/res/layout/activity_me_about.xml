<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/activity_second_titlebar"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <ImageView
                android:layout_width="@dimen/dimen_64dp"
                android:layout_height="@dimen/dimen_64dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimen_32dp"
                android:src="@drawable/login_logo"/>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:gravity="center"
                      android:padding="@dimen/dimen_8dp">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/font_size_14sp"
                    android:text="版本号:"/>
            <TextView
                    android:id="@+id/tv_about_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/font_size_14sp"
                    android:text="4.0"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:background="@drawable/border_top_bottom"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_48dp"
                    android:background="@drawable/border_top_bottom"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dimen_16dp"
                    android:paddingRight="@dimen/dimen_16dp">
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="@string/common_me_team"
                        android:textColor="@color/gray_deep"
                        android:textSize="@dimen/font_size_16sp"/>
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="3"
                        android:gravity="right"
                        android:text="@string/common_me_company"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/font_size_16sp"/>
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/call_me"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_48dp"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dimen_16dp"
                    android:paddingRight="@dimen/dimen_16dp">
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="@string/common_me_contract"
                        android:textColor="@color/gray_deep"
                        android:textSize="@dimen/font_size_16sp"/>
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:gravity="right"
                        android:autoLink="phone"
                        android:text="@string/common_me_telephone"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/font_size_16sp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:visibility="gone"
                android:background="@drawable/border_top_bottom"
                android:orientation="vertical">

            <LinearLayout
                    android:id="@+id/ll_about_business"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_48dp"
                    android:background="@drawable/border_top_bottom"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dimen_16dp"
                    android:paddingRight="@dimen/dimen_16dp">
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="@string/common_me_business"
                        android:textColor="@color/gray_deep"
                        android:textSize="@dimen/font_size_16sp"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:contentDescription="@null"
                        android:src="@mipmap/arrow_right_n"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/ll_about_covenanter"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_48dp"
                    android:orientation="horizontal"
                    android:background="@drawable/border_bottom"
                    android:paddingLeft="@dimen/dimen_16dp"
                    android:paddingRight="@dimen/dimen_16dp">
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="@string/common_me_property"
                        android:textColor="@color/gray_deep"
                        android:textSize="@dimen/font_size_16sp"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:contentDescription="@null"
                        android:src="@mipmap/arrow_right_n"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_48dp"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:paddingLeft="@dimen/dimen_16dp"
                    android:paddingRight="@dimen/dimen_16dp">
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="@string/common_me_broker"
                        android:textColor="@color/gray_deep"
                        android:textSize="@dimen/font_size_16sp"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:contentDescription="@null"
                        android:src="@mipmap/arrow_right_n"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
                android:id="@+id/tv"
                android:visibility="gone"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_gravity="center"
                android:background="@drawable/tiaozao"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="15sp"/>
    </LinearLayout>
</LinearLayout>