<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimen_16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_8dp">

            <TextView
                android:id="@+id/tv_goods_business"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:lines="1"
                android:text="Business Name"
                android:textColor="@color/gray_deep"
                android:textSize="@dimen/font_size_14sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/dimen_8dp"
            android:layout_marginRight="@dimen/dimen_8dp"
            android:background="@color/gray_light_3"
            android:contentDescription="@null" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ListView
                android:id="@+id/lv_orders_goods"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@null"
                android:scrollbars="none" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dimen_8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="运费："
                android:textColor="@color/gray"
                android:textSize="@dimen/font_size_14sp" />

            <TextView
                android:id="@+id/tv_goods_freight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="￥19"
                android:textColor="@color/gray"
                android:textSize="@dimen/font_size_14sp" />

            <TextView
                android:id="@+id/tv_goods_freight_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_8dp"
                android:lines="1"
                android:text="(满XXX元享受免费配送服务)"
                android:textColor="@color/red"
                android:textSize="@dimen/font_size_14sp"
                android:visibility="visible" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/dimen_8dp"
            android:layout_marginRight="@dimen/dimen_8dp"
            android:background="@color/gray_light_3"
            android:contentDescription="@null" />

        <LinearLayout
            android:id="@+id/ll_me_coupon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:focusable="false"
            android:padding="@dimen/dimen_8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:lines="1"
                android:text="优惠劵："
                android:textColor="@color/gray"
                android:textSize="@dimen/font_size_14sp" />

            <TextView
                android:id="@+id/tv_goods_coupon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:lines="1"
                android:text="￥19"
                android:textColor="@color/gray"
                android:textSize="@dimen/font_size_14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:contentDescription="@null"
                android:src="@mipmap/arrow_right_n" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/dimen_8dp"
            android:layout_marginRight="@dimen/dimen_8dp"
            android:background="@color/gray_light_3"
            android:contentDescription="@null" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_order_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/back_edittext_login"
                android:hint="给商家留言"
                android:lines="1"
                android:minHeight="@dimen/dimen_32dp"
                android:padding="@dimen/dimen_8dp"
                android:textColor="@color/gray_deep"
                android:textSize="@dimen/font_size_14sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/dimen_8dp"
            android:layout_marginRight="@dimen/dimen_8dp"
            android:background="@color/gray_light_3"
            android:contentDescription="@null" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal"
            android:padding="@dimen/dimen_8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="小计："
                android:textColor="@color/red"
                android:textSize="@dimen/font_size_14sp" />

            <TextView
                android:id="@+id/tv_items_prices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="￥19"
                android:textColor="@color/red"
                android:textSize="@dimen/font_size_14sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>