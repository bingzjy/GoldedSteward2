<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/activity_second_titlebar"/>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/gray_light_2">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">
            <com.ldnet.view.ImageCycleView
                    android:id="@+id/vp_weekend_images"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_144dp"/>

            <TextView
                    android:id="@+id/tv_weekend_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:padding="@dimen/dimen_12dp"
                    android:text="这是标题！"
                    android:textColor="@color/gray_deep"
                    android:textSize="@dimen/font_size_16sp"/>
            <TextView android:layout_width="match_parent" android:layout_height="1dp"
                      android:background="@color/gray_light_2"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/dimen_12dp">

                <TextView
                        android:id="@+id/tv_weekend_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="@dimen/dimen_4dp"
                        android:lineSpacingMultiplier="1.5"
                        android:text="这是内容！"
                        android:textColor="@color/gray_deep"
                        android:textSize="@dimen/font_size_16sp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray_light_3"
            android:orientation="vertical"
            android:padding="@dimen/dimen_4dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dimen_4dp">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="活动费用："
                    android:textColor="@color/gray_deep"
                    android:textSize="@dimen/font_size_14sp"/>

            <TextView
                    android:id="@+id/tv_weekend_cost"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="[免费]"
                    android:textColor="@color/red"
                    android:textSize="@dimen/font_size_14sp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开始时间："
                    android:textColor="@color/gray_deep"
                    android:textSize="@dimen/font_size_14sp"/>

            <TextView
                    android:id="@+id/tv_weekend_start_datetime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="这是内容！"
                    android:textColor="@color/gray_deep"
                    android:textSize="@dimen/font_size_14sp"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dimen_4dp">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="报名人数："
                    android:textColor="@color/gray_deep"
                    android:textSize="@dimen/font_size_14sp"/>

            <TextView
                    android:id="@+id/tv_weekend_signup_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="19"
                    android:textColor="@color/gray_deep"
                    android:textSize="@dimen/font_size_14sp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="结束时间："
                    android:textColor="@color/gray_deep"
                    android:textSize="@dimen/font_size_14sp"/>

            <TextView
                    android:id="@+id/tv_weekend_end_datetime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="这是内容！"
                    android:textColor="@color/gray_deep"
                    android:textSize="@dimen/font_size_14sp"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dimen_4dp">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="活动地址："
                    android:textColor="@color/gray_deep"
                    android:textSize="@dimen/font_size_14sp"/>

            <TextView
                    android:id="@+id/tv_weekend_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="这是内容！"
                    android:textColor="@color/gray_deep"
                    android:textSize="@dimen/font_size_14sp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_48dp"
            android:orientation="horizontal">

        <Button
                android:id="@+id/btn_weekend_signup_information"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/back_button_orange"
                android:text="@string/weekend_signup_information"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_16sp"
                android:visibility="gone"/>


        <Button
                android:id="@+id/btn_weekend_call"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/back_button_orange"
                android:text="@string/weekend_call"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_16sp"/>

        <Button
                android:id="@+id/btn_weekend_signup"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/back_button_green"
                android:text="@string/weekend_signup"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_16sp"/>
    </LinearLayout>
</LinearLayout>