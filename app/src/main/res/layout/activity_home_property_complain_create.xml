<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:id="@+id/ll_complain_create"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/activity_second_titlebar"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/border_bottom"
            android:layout_marginBottom="@dimen/dimen_8dp"
            android:paddingBottom="@dimen/dimen_8dp"
            android:paddingTop="@dimen/dimen_8dp">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dimen_4dp"
                    android:text="@string/repair_house_info"
                    android:textColor="@color/gray_deep"
                    android:textSize="@dimen/font_size_16sp"/>
            <TextView
                    android:id="@+id/tv_complain_houseinfo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/dimen_4dp"
                    android:text="THIS CONTENT"
                    android:textColor="@color/gray_deep"
                    android:textSize="@dimen/font_size_16sp"/>
            <ImageButton
                    android:id="@+id/ibtn_complain_change_house"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:src="@mipmap/arrow_right_n"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/border_top_bottom"
            android:orientation="vertical">

        <!--<LinearLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="@dimen/dimen_48dp"-->
        <!--android:background="@color/gray_light_3"-->
        <!--android:gravity="center_vertical"-->
        <!--android:paddingLeft="@dimen/dimen_8dp">-->
        <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="@string/complain_tip"-->
        <!--android:textColor="@color/gray"-->
        <!--android:textSize="@dimen/font_size_16sp"/>-->
        <!--</LinearLayout>-->
        <EditText
                android:id="@+id/et_complain_content"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="top|left"
                android:hint="@string/complain_content"
                android:lineSpacingExtra="@dimen/dimen_8dp"
                android:lines="6"
                android:minHeight="@dimen/dimen_48dp"
                android:padding="@dimen/dimen_4dp"
                android:textColor="@color/gray_deep"
                android:textCursorDrawable="@drawable/cursor"
                android:textSize="@dimen/dimen_16dp"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_32dp"
                android:background="@color/gray_light_3"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dimen_8dp">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/frea_market_pictures"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/font_size_14sp"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/ll_complain_picture_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dimen_4dp">
            <GridView
                    android:id="@+id/ibtn_complain_picture_add"
                    android:layout_width="wrap_content"
                    android:layout_height="64dp"
                    android:horizontalSpacing="3dp"
                    android:numColumns="5"
                    android:scrollbars="none"
                    android:verticalSpacing="5dp" >
            </GridView>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_48dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dimen_8dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="报修人电话:"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_14sp"/>
        <TextView
                android:id="@+id/tv_property_tel"
                android:layout_marginLeft="@dimen/dimen_5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="报修人电话:"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_14sp"/>
    </LinearLayout>
    <View android:layout_width="match_parent" android:layout_height="1dp"
          android:background="@color/gray_light_2"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_48dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dimen_8dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="报修人姓名:"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_14sp"/>
        <TextView
                android:id="@+id/tv_property_name"
                android:layout_marginLeft="@dimen/dimen_5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="报修人电话:"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_14sp"/>
    </LinearLayout>
    <LinearLayout
            android:layout_margin="@dimen/dimen_20dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_48dp"
            android:orientation="horizontal">
        <Button
                android:id="@+id/btn_complain_call_property"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/sharp_rect"
                android:text="@string/call_property"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_16sp"/>
        <Button
                android:id="@+id/btn_complain_confirm"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/sharp_rect_green"
                android:text="@string/complain_confirm"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_16sp"/>
    </LinearLayout>
</LinearLayout>