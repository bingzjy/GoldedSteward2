<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_64dp">

    <LinearLayout
        android:id="@+id/slv_back_view"
        android:layout_width="@dimen/dimen_160dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:orientation="horizontal">

        <!--<Button-->
            <!--android:id="@+id/example_1"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_weight="2"-->
            <!--android:background="@null" />-->

        <TextView
            android:id="@+id/btn_address_default"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/gray_light"
            android:gravity="center"
            android:text="@string/address_default"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_16sp" />

        <TextView
            android:id="@+id/btn_delete"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/red"
            android:text="@string/button_delete"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/slv_front_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_64dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/dimen_8dp">

        <TextView
            android:id="@+id/tv_me_address_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="THIS IS ADDRESS TITLE"
            android:textColor="@color/gray_deep"
            android:textSize="@dimen/font_size_16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_me_address_zipcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="ZIP CODE"
                android:textColor="@color/gray"
                android:textSize="@dimen/font_size_14sp" />

            <TextView
                android:id="@+id/tv_me_address_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_8dp"
                android:lines="1"
                android:text="NAME"
                android:textColor="@color/gray"
                android:textSize="@dimen/font_size_14sp" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
