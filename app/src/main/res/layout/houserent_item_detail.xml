<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <include layout="@layout/activity_houserent_titlebar"/>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/gray_light_2">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <com.ldnet.view.ImageCycleView
                    android:id="@+id/vp_house_rent_images"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_144dp"/>
            <TextView
                    android:id="@+id/houserent_detail_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dimen_8dp"
                    android:text="标题"
                    android:textColor="@color/gray_deep"
                    android:background="@color/white"
                    android:textSize="@dimen/font_size_16sp"/>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingLeft="@dimen/dimen_8dp">
                <TextView
                        android:id="@+id/houserent_detail_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥1800元/月"
                        android:textColor="@color/red"
                        android:textSize="@dimen/font_size_16sp"/>
                <TextView
                        android:id="@+id/houserent_detail_rentType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/houserent_detail_price"
                        android:paddingLeft="@dimen/dimen_4dp"
                        android:text="(半年付)"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/font_size_14sp"/>
            </RelativeLayout>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="@color/background"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal">

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:padding="@dimen/dimen_10dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="厅室"
                            android:textColor="@color/gray_deep"
                            android:textSize="@dimen/font_size_14sp"/>

                    <TextView
                            android:id="@+id/houserent_detail_room"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:text="1室1厅1卫"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/font_size_14sp"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:padding="@dimen/dimen_10dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="面积"
                            android:textColor="@color/gray_deep"
                            android:textSize="@dimen/font_size_14sp"/>

                    <TextView
                            android:id="@+id/houserent_detail_acreage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="10dp"
                            android:text="45㎡"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/font_size_14sp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal">

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:padding="@dimen/dimen_10dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="装修"
                            android:textColor="@color/gray_deep"
                            android:textSize="@dimen/font_size_14sp"/>

                    <TextView
                            android:id="@+id/houserent_detail_fitmenttype"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:text="精装修"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/font_size_14sp"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:padding="@dimen/dimen_10dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="概况"
                            android:textColor="@color/gray_deep"
                            android:textSize="@dimen/font_size_14sp"/>

                    <TextView
                            android:id="@+id/houserent_detail_roomtype"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="10dp"
                            android:text="普通住宅"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/font_size_14sp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal">
                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:padding="@dimen/dimen_10dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="楼层"
                            android:textColor="@color/gray_deep"
                            android:textSize="@dimen/font_size_14sp"/>
                    <TextView
                            android:id="@+id/houserent_detail_floor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:text="第10层/总24层"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/font_size_14sp"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:padding="@dimen/dimen_10dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="朝向"
                            android:textColor="@color/gray_deep"
                            android:textSize="@dimen/font_size_14sp"/>
                    <TextView
                            android:id="@+id/houserent_detail_orientation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:text="朝南"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/font_size_14sp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal">
                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:padding="@dimen/dimen_10dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="房屋配置"
                            android:textColor="@color/gray_deep"
                            android:textSize="@dimen/font_size_14sp"/>
                    <TextView
                            android:id="@+id/houserent_detail_RoomDeploy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:text="第10层/总24层"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/font_size_14sp"/>
                </LinearLayout>

            </LinearLayout>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="@color/gray_light_2"/>
            <RelativeLayout
                    android:id="@+id/houserent_detail_rl_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="@dimen/dimen_10dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    >
                <TextView
                        android:id="@+id/houserent_detail_tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/houserent_detail_address"
                        android:textColor="@color/gray_deep"
                        android:textSize="@dimen/font_size_14sp"/>
                <TextView
                        android:id="@+id/houserent_detail_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/houserent_detail_tv_address"
                        android:text="地址"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/font_size_14sp"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_48dp"
            android:orientation="horizontal">
        <Button
                android:id="@+id/houserent_detail_contracttel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/back_button_green"
                android:text="联系电话"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_16sp"/>
    </LinearLayout>
</LinearLayout>

