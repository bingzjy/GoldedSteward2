<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_64dp">

    <LinearLayout
        android:id="@+id/slv_back_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:orientation="horizontal"
        android:background="@null">

        <!--<Button-->
        <!--android:id="@+id/example_1"-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_weight="2"-->
        <!--android:background="@null" />-->

        <Button
            android:id="@+id/btn_update"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/gray_light"
            android:focusable="false"
            android:paddingLeft="@dimen/dimen_16dp"
            android:paddingRight="@dimen/dimen_16dp"
            android:layout_margin="@dimen/dimen_0dp"
            android:text="修改"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_16sp" />

        <Button
            android:id="@+id/btn_delete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/red"
            android:focusable="false"
            android:paddingLeft="@dimen/dimen_16dp"
            android:paddingRight="@dimen/dimen_16dp"
            android:layout_margin="@dimen/dimen_0dp"
            android:text="@string/button_delete"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/slv_front_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_64dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/dimen_8dp">

        <TextView
            android:id="@+id/tv_publish_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="THIS IS PUBLISH INFORMATION TITLE"
            android:textColor="@color/gray_deep"
            android:textSize="@dimen/font_size_16sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_2dp">

            <TextView
                android:id="@+id/tv_publish_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="THIS TYPE"
                android:textColor="@color/gray"
                android:textSize="@dimen/font_size_14sp" />

            <TextView
                android:id="@+id/tv_publish_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_8dp"
                android:lines="1"
                android:text="2015-09-06 10:32:00"
                android:textColor="@color/gray"
                android:textSize="@dimen/font_size_14sp" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>