<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_64dp"
    android:background="@drawable/border_bottom"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:minWidth="@dimen/dimen_64dp"
        android:paddingLeft="@dimen/dimen_8dp"
        android:paddingRight="@dimen/dimen_8dp">

        <TextView
            android:id="@+id/tv_integral_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="@color/red"
            android:textSize="@dimen/font_size_20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="@dimen/dimen_6dp">

        <TextView
            android:id="@+id/tv_integral_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2015-09-08 11:10:32"
            android:textColor="@color/gray"
            android:textSize="@dimen/font_size_14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_4dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_integral_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This is title"
                android:textColor="@color/gray_deep"
                android:textSize="@dimen/font_size_14sp" />

            <TextView
                android:id="@+id/tv_integral_memo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This is memo"
                android:textColor="@color/gray"
                android:textSize="@dimen/font_size_14sp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>