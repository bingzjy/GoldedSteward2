<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_change_psd"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/activity_second_titlebar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:background="@drawable/border_top_bottom"
        android:baselineAligned="false"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_old_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/back_edittext_login"
            android:gravity="center_vertical"
            android:hint="输入旧密码"
            android:inputType="textPassword"
            android:padding="@dimen/dimen_16dp"
            android:singleLine="true"
            android:textColor="@color/gray_deep"
            android:textSize="@dimen/font_size_16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:background="@drawable/border_top_bottom"
        android:baselineAligned="false"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_change_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/back_edittext_login"
            android:gravity="center_vertical"
            android:hint="@string/activity_change_password"
            android:inputType="textPassword"
            android:padding="@dimen/dimen_16dp"
            android:singleLine="true"
            android:textColor="@color/gray_deep"
            android:textSize="@dimen/font_size_16sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_light"
            android:contentDescription="@null" />

        <EditText
            android:id="@+id/et_change_password_valid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/back_edittext_login"
            android:gravity="center_vertical"
            android:hint="@string/activity_change_password_valid"
            android:inputType="textPassword"
            android:padding="@dimen/dimen_16dp"
            android:singleLine="true"
            android:textColor="@color/gray_deep"
            android:textSize="@dimen/font_size_16sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_change_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_8dp"
        android:layout_marginRight="@dimen/dimen_8dp"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:background="@drawable/back_button_login"
        android:padding="@dimen/dimen_8dp"
        android:text="@string/button_confirm"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_20sp"></Button>

</LinearLayout>