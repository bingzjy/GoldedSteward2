<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="1dp"
              android:background="@color/white"
              android:orientation="horizontal"
              android:padding="@dimen/dimen_8dp">

    <ImageView
        android:id="@+id/iv_frea_market_image"
        android:layout_width="98dp"
        android:layout_height="65dp"
        android:layout_marginRight="@dimen/dimen_8dp"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:src="@mipmap/default_info"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_frea_market_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="This is freamarket&apos;s title"
            android:textColor="@color/gray_deep"
            android:textSize="@dimen/font_size_16sp"/>


        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:paddingTop="@dimen/dimen_4dp">
            <TextView
                android:id="@+id/tv_frea_market_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="￥12.00"
                android:textColor="@color/red"
                android:textSize="@dimen/font_size_14sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:paddingLeft="@dimen/dimen_8dp"
                android:text="发布时间："
                android:textColor="@color/gray"
                android:textSize="@dimen/font_size_14sp"/>
            <TextView
                android:id="@+id/tv_frea_market_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="2015-09-06"
                android:ellipsize="end"
                android:textColor="@color/gray"
                android:textSize="@dimen/font_size_14sp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_frea_market_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="This is freamarket good address"
            android:textColor="@color/gray"
            android:textSize="@dimen/font_size_14sp"/>
    </LinearLayout>

</LinearLayout>