<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <corners android:bottomLeftRadius="@dimen/dimen_4dp" android:bottomRightRadius="@dimen/dimen_4dp" android:topLeftRadius="@dimen/dimen_4dp" android:topRightRadius="@dimen/dimen_4dp"></corners>
            <!-- 描边 -->
            <stroke android:width="1dp" android:color="@color/gray" android:dashWidth="2dp" />
            <solid android:color="#6699FF" />
        </shape>

    </item>
    <item android:state_checked="false">
        <shape>
            <corners android:bottomLeftRadius="@dimen/dimen_4dp" android:bottomRightRadius="@dimen/dimen_4dp" android:topLeftRadius="@dimen/dimen_4dp" android:topRightRadius="@dimen/dimen_4dp"></corners>
            <stroke android:width="1dp" android:color="@color/gray" android:dashWidth="2dp" />
            <solid android:color="#6699FF" />
        </shape>
    </item>
    <item android:state_checked="true">
        <shape>
            <corners android:bottomLeftRadius="@dimen/dimen_4dp" android:bottomRightRadius="@dimen/dimen_4dp" android:topLeftRadius="@dimen/dimen_4dp" android:topRightRadius="@dimen/dimen_4dp"></corners>
            <stroke android:width="1dp" android:color="@color/gray" android:dashWidth="2dp" />
            <solid android:color="#6699FF" />
        </shape>
    </item>
</selector>